<form table="ut_users">


 <insert
    sql="insert into ut_users (Login, Password) values(@Login;, @pwd;)"
    success_rus="Запись добавлена!"
    success_eng="Record added"
>

   <fields>

     <field
      name="Login"
      name_rus="Логин"
      name_eng="Login"
      type="string"
      needed="1"
      maxlength="25"
      size="40">
     </field>

     <field
      name="Password"
      name_rus="Пароль"
      name_eng="Password"
      type="Password"
      needed="1"
      maxlength="32"
      size="40">
     </field>

</fields>
   <button
       name_rus="Добавить запись"
       name_eng="Add record"
       name_por="">
   </button> 

 </insert>

 <select sql="select UserID, Login
from ut_users
order by UserID desc
">
  <header>

     <item
      name="UserID"
      name_rus="N"
      name_eng="N">
    </item> 

     <item
      name="Login"
      name_rus="Логин"
      name_eng="Login">
    </item> 


   </header>
 </select>



