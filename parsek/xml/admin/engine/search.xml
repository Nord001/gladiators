<?xml version="1.0" encoding="Windows-1251"?>
<form title_rus="Поиск" title_eng="search">


 <insert
    sql="insert into en_search(TableName,Title,Name_rus,Name_eng,Name_ger,Url,TableID,ImageID,Headline,Fields) values(@TableName;,@Title;,@Name_rus;,@Name_eng;,@Name_ger;,@Url;,@TableID;,@ImageID;,@Headline;,@Fields;)"
    success_rus="Запись добавлена!"
    success_eng="Record added">

   <fields>



    <field
      name="Name_rus"
      name_rus="Название  (рус)"
      name_eng="Name (rus)"
      type="string"
      maxsize="50"
      needed="1">
    </field>
	
    <field
      name="Url"
      name_rus="Url"
      name_eng="Url"
      type="string"
      maxsize="150">
    </field>

    <field
      name="TableName"
      name_rus="Таблица"
      name_eng="Table"
      type="string"
      needed="1"
      maxsize="40">
    </field>

    <field
      name="TableID"
      name_rus="Столбец ключа"
      name_eng="Key column"
      type="string"
      needed="1"
      maxsize="20">
    </field>


    <field
      name="Title"
      name_rus="Столбец названия"
      name_eng="Title column"
      type="string"
      needed="1"
      maxsize="20">
    </field>


    <field
      name="Headline"
      name_rus="Столбец заголовка"
      name_eng="Headline"
      type="string"
      maxsize="20">
    </field>



    <field
      name="ImageID"
      name_rus="Выводить изображение"
      name_eng=""
      type="checkbox">1
    </field>


    <field
      name="Fields"
      name_rus="Поля индексации"
      name_eng=""
      type="text">
    </field>

   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>
	
 <select sql="select * from en_search order by Name_$lang;"
pagecount="200">
	
<header>
		
    <item
      name="SearchID"
      name_rus="ИД"
      name_eng="ID">
    </item>	

    <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      lang="1">
    </item>	

    <item
      name="TableName"
      name_rus="Таблица"
      name_eng="Table">
    </item>	


	

    <item type="edit"/>

    <item type="delete"/>

   </header>

 </select>

 <update
    sql="update en_search set Fields=@Fields;,
TableName=@TableName;,Title=@Title;,Url=@Url;,Name_rus=@Name_rus;,Name_eng=@Name_eng;,Name_ger=@Name_ger;,TableID=@TableID;,ImageID=@ImageID;,Headline=@Headline; where SearchID=@id;"
    select="select * from en_search where SearchID=@id;"
    success_rus="Запись изменена!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена"
    button="Submit">



   <fields>

    <field
      name="Name_rus"
      name_rus="Название  (рус)"
      name_eng="Name (rus)"
      type="string"
      maxsize="50"
      needed="1">
    </field>
	
    <field
      name="Url"
      name_rus="Url"
      name_eng="Url"
      type="string"
      maxsize="150">
    </field>

    <field
      name="TableName"
      name_rus="Таблица"
      name_eng="Table"
      type="string"
      needed="1"
      maxsize="40">
    </field>

    <field
      name="TableID"
      name_rus="Столбец ключа"
      name_eng="Key column"
      type="string"
      needed="1"
      maxsize="20">
    </field>


    <field
      name="Title"
      name_rus="Столбец названия"
      name_eng="Title column"
      type="string"
      needed="1"
      maxsize="20">
    </field>


    <field
      name="Headline"
      name_rus="Столбец заголовка"
      name_eng="Headline"
      type="string"
      maxsize="20">
    </field>



    <field
      name="ImageID"
      name_rus="Выводить изображение"
      name_eng=""
      type="checkbox">
    </field>

    <field
      name="Fields"
      name_rus="Поля индексации (в столбик)"
      name_eng=""
      type="text">
    </field>

   </fields>

   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from en_search where SearchID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>