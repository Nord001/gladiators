<?xml version="1.0" encoding="Windows-1251"?>
<form table="ut_programs">


 <insert
    sql="insert into ut_programs (Name_rus, Description_rus, Url) values(
  
   @Name_rus;,
   @Description_rus;,
   @Url;
)"
    success_rus="Запись добавлена!"
    success_eng="Record added">

   <fields>

     <field
      name="Name_rus"
      name_rus="Название"
      name_eng="Name"
      type="string"
      maxlength="255"
      needed="1" nobr="1"
      size="40">
     </field>

     <field
      name="Description_rus"
      name_rus="Описание"
      name_eng="Description"
      type="text">
     </field>

     <field
      name="Url"
      name_rus="Ссылка"
      name_eng=""
      type="string">
     </field>


</fields>
   <button
       name_rus="Добавить запись"
       name_eng="Add record"
       name_por="">
   </button> 

 </insert>

 <select sql="select *
from ut_programs
order by ProgramID desc
">
  <header>

     <item
      name="ProgramID"
      name_rus="N"
      name_eng="N">
    </item> 

     <item
      name="Name_rus"
      name_rus="Название"
      name_eng="Name">
    </item> 

    <item
      name="Url"
      name_rus="Ссылка"
      name_eng="">
    </item> 

     <item type="edit"/>
    <item type="delete"/>

   </header>
 </select>



 <update
   sql="update ut_programs set 
   Name_rus=@Name_rus;, 
   Description_rus=@Description_rus;,
   Url=@Url;
where ProgramID=@id;
"
   select="select * from ut_programs where ProgramID=@id;"
     success_rus="Запись изменёна!"
     success_eng="Record changed"

     error_eng="Record not found"
     error_rus="Запись не найдена">

   <fields>

     <field
      name="Name_rus"
      name_rus="Название"
      name_eng="Name"
      type="string"
      maxlength="255"
      needed="1" nobr="1"
      size="40">
     </field>

     <field
      name="Description_rus"
      name_rus="Описание"
      name_eng="Description"
      type="text">
     </field>

     <field
      name="Url"
      name_rus="Ссылка"
      name_eng=""
      type="string">
     </field>

</fields>
   <button
       name_rus="Изменить запись"
       name_eng="Change record"
       name_por="">
   </button> 
 </update>

 <delete
    sql="delete from ut_programs where ProgramID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted"
    success_por="">
 </delete>

</form>
