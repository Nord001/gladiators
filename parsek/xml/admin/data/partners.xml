<?xml version="1.0" encoding="Windows-1251"?>
<form table="ut_partners">


 <insert
    sql="insert into ut_partners (Name_rus, Name_eng, Image, Small, Description_rus, Description_eng, Url) values(
  
   @Name_rus;,
   @Name_eng;,
   @Image;,
   @Small;,
   @Description_rus;,
   @Description_eng;,
   @Url;
)"
    success_rus="Запись добавлена!"
    success_eng="Record added">

   <fields>

     <field
      name="Name_rus"
      name_rus="Название"
      name_eng="Name(rus)"
      type="string"
      maxlength="255"
      needed="1" nobr="1"
      size="40">
     </field>

     <field
      name="Description_rus"
      name_rus="Описание"
      name_eng="Description"
      type="text">
     </field>

     <field
      name="Image"
      name_rus="Изображение"
      name_eng="Image"
      type="image"
      maxsize="150000"
      width="124">
     </field>

     <field
      name="Url"
      name_rus="Ссылка"
      name_eng="Url"
      type="string"
      size="50">
     </field>

</fields>
   <button
       name_rus="Добавить запись"
       name_eng="Add record"
       name_por="">
   </button> 

 </insert>

 <select sql="select *
from ut_partners
order by PartnerID desc
">
  <header>

     <item
      name="PartnerID"
      name_rus="N"
      name_eng="N">
    </item> 

     <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      lang="1">
    </item> 

    <item
      name="Description_rus"
      name_rus="Описание"
      name_eng="Description">
    </item> 

    <item
      name="Url"
      name_rus="Ссылка"
      name_eng="Url">
    </item> 

     <item type="edit"/>
    <item type="delete"/>

   </header>
 </select>



 <update
   sql="update ut_partners set 


   Name_rus=@Name_rus;, 
   Description_rus=@Description_rus;,
 

Url=@Url;

where PartnerID=@id;
#update ut_partners set Image=@Image;,Small=@Small; where PartnerID=@id; and @Image;&lt;&gt;''"
   select="select * from ut_partners where PartnerID=@id;"
     success_rus="Запись изменёна!"
     success_eng="Record changed"

     error_eng="Record not found"
     error_rus="Запись не найдена">

   <fields>

     <field
      name="Name_rus"
      name_rus="Название"
      name_eng="Name(rus)"
      type="string"
      maxlength="255"
      needed="1" nobr="1"
      size="40">
     </field>

     <field
      name="Description_rus"
      name_rus="Описание"
      name_eng="Description"
      type="text">
     </field>

     <field
      name="Image"
      name_rus="Изображение"
      name_eng="Image"
      type="image"
      maxsize="150000"
      width="124">
     </field>

     <field
      name="Url"
      name_rus="Ссылка"
      name_eng="Url"
      type="string"
      size="50">
     </field>

</fields>
   <button
       name_rus="Изменить запись"
       name_eng="Change record"
       name_por="">
   </button> 
 </update>

 <delete
    sql="delete from ut_partners where PartnerID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted"
    success_por="">
 </delete>

</form>
