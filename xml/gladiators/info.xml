 <sell width="100%" sql="set @StaffID=(select StaffID from fn_staff_info where InfoID=@InfoID;)
#^sell_slave('$auth->user;','$GladiatorID;');"
   success_rus="Гладиатор продан"
   success_eng="Gladiator sold" hint_rus="Гладиатор будет продан за половину начальной стоимости">

   <fields>

    <field
      name="GladiatorID"
      type="hidden">
    </field> 


    <field
      name="Gladiator"
      name_rus="Гладиатор"
      name_eng="Gladiator"
      needed="1"
      type="label">
    </field> 



    <field
      name="NewPrice" sql="select round('$Price;'/2)"
      name_rus="Цена продажи"
      needed="1"
      name_eng="Selling price"
      type="dots">
    </field> 



   </fields>

   <button
       name_rus="Продать"
       name_eng="Sell">
