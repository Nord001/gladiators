<?xml version="1.0" encoding="Windows-1251"?>
<form table="fn_buildings_conditions">

 <insert
    sql="insert into fn_buildings_conditions values('',
	@BuildingID;,
	@InfoID;)"

    success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">
   <fields>

     <field
      name="BuildingID"
      name_rus="Постройка-1"
      name_eng="Building-1"
      type="sqlist"
      sql="select InfoID,concat(Name_$lang;,'-',Level) as Name from fn_buildings_info order by Name asc"
      needed="1">
    </field> 

     <field
      name="InfoID"
      name_rus="Постройка-2"
      name_eng="Building-2"
      type="sqlist"
      sql="select InfoID,concat(Name_$lang;,'-',Level) as Name from fn_buildings_info order by Name asc"
      needed="1">
    </field> 


   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select pagecount="100"
    sql="select c.ConditionID,concat(b.Name_$lang;,'-',b.Level) as Building1,concat(s.Name_$lang;,'-',s.Level) as Building2 from fn_buildings_conditions c left outer join fn_buildings_info b on (b.InfoID=c.BuildingID) left outer join fn_buildings_info s on (s.InfoID=c.InfoID) 
order by Building1">

   <header>

    <item
      name="ConditionID"
      name_rus="ИД"
      name_eng="ID">
    </item> 

    <item
      name="Building1"
      name_rus="Постройка-1"
      name_eng="Building-1">
    </item> 

    <item
      name="Building2"
      name_rus="Постройка-2"
      name_eng="Building-2">
    </item> 

    <item type="edit"/>

    <item type="delete"/>

   </header>

 </select>

 <update
    sql="update fn_buildings_conditions set 
BuildingID=@BuildingID;,
InfoID=@InfoID;
 where ConditionID=@id;"
    select="select * from fn_buildings_conditions where ConditionID=@id;"
    success_rus="Запись изменёна!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена"
    button="Submit">

   <header>

     <item
      name_rus="поле"
      name_eng="field">
     </item>

     <item
      name_rus="значение"
      name_eng="value">
     </item>

   </header>


   <fields>

     <field
      name="BuildingID"
      name_rus="Постройка-1"
      name_eng="Building-1"
      type="sqlist"
      sql="select InfoID,concat(Name_$lang;,'-',Level) as Name from fn_buildings_info order by Name asc"
      needed="1">
    </field> 

     <field
      name="InfoID"
      name_rus="Постройка-2"
      name_eng="Building-2"
      type="sqlist"
      sql="select InfoID,concat(Name_$lang;,'-',Level) as Name from fn_buildings_info order by Name asc"
      needed="1">
    </field> 


   </fields>


   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from fn_buildings_conditions where ConditionID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>