<?xml version="1.0" encoding="Windows-1251"?>
<form>


 <insert
    sql="insert into fn_operation_types (Name_rus,Name_eng,Name_ger,Parent) values(@Name_rus;,@Name_eng;,@Name_ger;,@Parent;)"
    success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">

   <fields>

    <field
      name="Name_rus"
      name_rus="Название  (рус)"
      name_eng="Name (rus)"
      type="string"
      maxsize="50"
      needed="1">
    </field>
	
    <field
      name="Name_eng"
      name_rus="Название (анг)"
      name_eng="Name (eng)"
      type="string"
      maxsize="50">
    </field>

    <field
      name="Name_ger"
      name_rus="Название (нем)"
      name_eng="Name (ger)"
      type="string"
      maxsize="50">
    </field>

    <field
      name="Parent"
      name_rus="Класс"
      name_eng="Class"
      type="sqlist"
      sql="select * from fn_operation_types order by Name_$lang;">
    </field>

   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>
	
 <select sql="select c.*,c2.Name_$lang; as ParentName from fn_operation_types c left outer join fn_operation_types c2 on c.Parent=c2.TypeID order by c.Name_$lang;">
	
<header>
		
    <item
      name="TypeID"
      name_rus="ИД"
      name_eng="ID">
    </item>	

    <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      lang="1">
    </item>	


    <item
      name="ParentName"
      name_rus="Предок"
      name_eng="Parent">
    </item>	

    <item type="edit"/>

    <item type="delete"/>

   </header>

 </select>

 <update
    sql="update fn_operation_types set Name_rus=@Name_rus;,Name_eng=@Name_eng;,Name_ger=@Name_ger;,Parent=@Parent; where TypeID=@id;"
    select="select * from fn_operation_types where TypeID=@id;"
    success_rus="Запись изменена!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена"
    button="Submit">

   <header>

     <item
      name_rus="поле"
      name_eng="field">
     </item>

     <item
      name_rus="значение"
      name_eng="value">
     </item>

   </header>

   <fields>

    <field
      name="Name_rus"
      name_rus="Название  (рус)"
      name_eng="Name (rus)"
      type="string"
      maxsize="50"
      needed="1">
    </field>
	
    <field
      name="Name_eng"
      name_rus="Название (анг)"
      name_eng="Name (eng)"
      type="string"
      maxsize="50">
    </field>

    <field
      name="Name_ger"
      name_rus="Название (нем)"
      name_eng="Name (ger)"
      type="string"
      maxsize="50">
    </field>


    <field
      name="Parent"
      name_rus="Класс"
      name_eng="Class"
      type="sqlist"
      sql="select * from fn_operation_types order by Name_$lang;">
    </field>


   </fields>

   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from fn_operation_types where TypeID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>