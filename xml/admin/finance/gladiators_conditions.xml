<?xml version="1.0" encoding="Windows-1251"?>
<form table="fn_gladiators_conditions">

 <insert
    sql="insert into fn_gladiators_conditions values('',
	@TypeID;,
	@InfoID;)"

    success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">
   <fields>

     <field
      name="TypeID"
      name_rus="Тип гладиатора"
      name_eng="Gladiator type"
      type="sqlist"
      sql="select TypeID,Name_$lang; as Name from ut_gladiator_types order by Name asc"
      needed="1">
    </field> 

     <field
      name="InfoID"
      name_rus="Постройка"
      name_eng="Building"
      type="sqlist"
      sql="select InfoID,concat(Name_$lang;,'-',Level) as Name from fn_buildings_info order by Name asc"
      needed="1">
    </field> 


   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select pagecount="100"
    sql="select c.ConditionID, t.Name_$lang; as Type,concat(b.Name_$lang;,'-',b.Level) as Building from fn_gladiators_conditions c
 left outer join ut_gladiator_types t on (t.TypeID=c.TypeID) 
left outer join fn_buildings_info b on (b.InfoID=c.InfoID) 
order by Type">

   <header>

    <item
      name="ConditionID"
      name_rus="ИД"
      name_eng="ID">
    </item> 

    <item
      name="Type"
      name_rus="Тип гладиатора"
      name_eng="Gladiator type">
    </item> 

    <item
      name="Building"
      name_rus="Постройка"
      name_eng="Building">
    </item> 

    <item type="edit"/>

    <item type="delete"/>

   </header>

 </select>

 <update
    sql="update fn_gladiators_conditions set 
TypeID=@TypeID;,
InfoID=@InfoID;
 where ConditionID=@id;"
    select="select * from fn_gladiators_conditions where ConditionID=@id;"
    success_rus="Запись изменёна!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена"
    button="Submit">

   <header>

     <item
      name_rus="поле"
      name_eng="field">
     </item>

     <item
      name_rus="значение"
      name_eng="value">
     </item>

   </header>


   <fields>

     <field
      name="TypeID"
      name_rus="Тип гладиатора"
      name_eng="Gladiator type"
      type="sqlist"
      sql="select TypeID,Name_$lang; as Name from ut_gladiator_types order by Name asc"
      needed="1">
    </field> 

     <field
      name="InfoID"
      name_rus="Постройка"
      name_eng="Building"
      type="sqlist"
      sql="select InfoID,concat(Name_$lang;,'-',Level) as Name from fn_buildings_info order by Name asc"
      needed="1">
    </field> 


   </fields>


   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from fn_gladiators_conditions where ConditionID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>