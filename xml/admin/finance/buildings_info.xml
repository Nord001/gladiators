    </field> 

     <field
      name="Expand"
      name_rus="Добавка к вместимости"
      name_eng="Additional capacity"
      type="numeric"
      size="8">
    </field> 

     <field
      name="Attendance"
      name_rus="Добавка к посещаемости (%)"
      name_eng="Additional attendance (%)"
      type="numeric">
    </field> 



    <field
      name="Img"
      name_rus="Иллюстрация"
      name_eng="Illustration"
	width="150"

        mix2="frame3.png"
      type="image">
    </field>


   </fields>


   <button
       name_rus="Изменить запись"
       name_eng="Edit record">
   </button> 


 </update>

 <delete
    sql="delete from fn_buildings_info where InfoID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

