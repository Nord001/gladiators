<?xml version="1.0" encoding="Windows-1251"?>
<form table="ut_rules"  title_rus="Правила" title_ger="Rules">


 <insert
    sql="insert into ut_rules (Name_rus,Rule_rus,Name_eng,Rule_eng,Rang,ParentID,TypeID) values(
   @Name_rus;,
   @Rule_rus;,
   @Name_eng;,
   @Rule_eng;,


   @Rang;,
   @ParentID;,
   @TypeID;)"
 success_rus="Запись добавлена!"
    success_eng="Record added"
    width="100%">

   <fields>

    <field
      name="Name_rus"
      name_rus="Название(рус)"
      type="string"
      maxlength="255"
      size="50"
      needed="1">
    </field>

    <field
      name="Rule_rus"
      name_rus="Правило(рус)"
      type="editor"
      cols="47"
      rows="12">
    </field>

    <field
      name="Name_eng"
      name_rus="Название(анг)"
      type="string"
      size="50"
      maxlength="255">
    </field>

    <field
      name="Rule_eng"
      name_rus="Правило(анг)"
      type="editor">
    </field>


    <field
      name="Rang"
      name_rus="Порядок"
      type="numeric">
    </field>

    <field
      name="TypeID"
      name_rus="Тип"
      type="sqlist"
      sql="select TypeID,Name_$lang; from ut_rules_types order by Rang">
    </field>


    <field
      name="ParentID"
      name_rus="Предок"
      type="sqlist"
      sql="select m.RuleID,left(concat_ws(' -> ',m2.Name_$lang;,m.Name_$lang;),50) from ut_rules m left outer join ut_rules m2 on m.ParentID=m2.RuleID where @TypeID;='' or (m.TypeID=@TypeID;) order by m2.Name_$lang;">
    </field>


   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select sql="select r1.*,r2.Name_$lang; as Parent, t.Name_$lang; as Type from ut_rules r1 left outer join ut_rules r2 on r1.ParentID=r2.RuleID left outer join ut_rules_types t on t.TypeID=r1.TypeID order by r1.Rang">
  <header>
    
     <item
      name="Rang"
      name_rus="№"
      name_eng="#"
      name_ger="">
    </item>


     <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      name_ger=""
      lang="1">
    </item>

    <item
      name="Parent"
      name_rus="Предок"
      name_eng="Parent"
      name_ger="">
    </item>

    <item
      name="Type"
      name_rus="Тип"
      name_eng="Type"
      name_ger="">
    </item>

   <item type="edit"/>
   <item type="delete"/>
  </header>
</select>

<update
    sql="update ut_rules set 
Name_rus=@Name_rus;,
Rule_rus=@Rule_rus;,
Name_eng=@Name_eng;,
Rule_eng=@Rule_eng;,

Rang=@Rang;,
TypeID=@TypeID;,
ParentID=@ParentID;
where RuleID=@id;"

 select="select * from ut_rules where RuleID=@id;"
    success_rus="Запись изменёна!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена"
    width="100%">
   <fields>

    <field
      name="Name_rus"
      name_rus="Название(рус)"
      type="string"
      maxlength="255"
      size="50"
      needed="1">
    </field>

    <field
      name="Rule_rus"
      name_rus="Правило(рус)"
      type="editor"
      cols="47"
      rows="12">
    </field>

    <field
      name="Name_eng"
      name_rus="Название(анг)"
      type="string"
      size="50"
      maxlength="255">
    </field>

    <field
      name="Rule_eng"
      name_rus="Правило(анг)"
      type="editor">
    </field>


    <field
      name="Rang"
      name_rus="Порядок"
      type="numeric">
    </field>

    <field
      name="TypeID"
      name_rus="Тип"
      type="sqlist"
      sql="select TypeID,Name_$lang; from ut_rules_types order by Rang">
    </field>


    <field
      name="ParentID"
      name_rus="Предок"
      type="sqlist"
      sql="select m.RuleID,left(concat_ws(' -> ',m2.Name_$lang;,m.Name_$lang;),50) from ut_rules m left outer join ut_rules m2 on m.ParentID=m2.RuleID where @TypeID;='' or (m.TypeID=@TypeID;) order by m2.Name_$lang;">
    </field>

   </fields>

    
   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from ut_rules where RuleID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>