<?xml version="1.0" encoding="Windows-1251"?>
<form table="ut_positions_restriction">

 <create
    sql="create table ut_positions_restriction (
RestrictionID int auto_increment primary key, 
PositionID char(2),
CombinationID char(3))"
    success_rus="Таблица создана">
 </create>

 <drop
    sql="drop table ut_positions_restriction"
    success_rus="Таблица удалена">
 </drop>

 <insert
    sql="insert into ut_positions_restriction (PositionID,CombinationID) values(
   @PositionID;,
   @CombinationID;)"
 success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">

   <fields>

    <field
      name="PositionID"
      name_rus="Позиция"
      type="sqlist"
      sql="select PositionID,PositionID from ut_positions where Type='1'"
      needed="1">
    </field>

    <field
      name="CombinationID"
      name_rus="Комбинация"
      type="sqlist"
      sql="select PositionID,PositionID from ut_positions"
      maxlength="3"
      needed="1">
    </field>
   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select sql="select * from ut_positions_restriction order by PositionID">
  <header>
    
     <item
      name="PositionID"
      name_rus="Позиция"
      name_eng=""
      name_ger="">
    </item>
    <item
      name="CombinationID"
      name_rus="Комбинация"
      name_eng=""
      name_ger="">
    </item>
   
<item type="edit"/>
   <item type="delete"/>
  </header>
</select>

<update
    sql="update ut_positions_restriction set 
PositionID=@PositionID;,
CombinationID=@CombinationID;
where RestrictionID=@id;"

 select="select * from ut_positions_restriction where RestrictionID=@id;"
    success_rus="Запись изменёна!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена">
      <fields>

    <field
      name="PositionID"
      name_rus="Позиция"
