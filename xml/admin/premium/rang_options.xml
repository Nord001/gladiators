<?xml version="1.0" encoding="Windows-1251"?>
<form table="vp_rang_options">

 <create
    sql="create table vp_rang_options(
     OptionID int auto_increment primary key,
     Name_rus varchar(100),
     Name_eng varchar(100),
     Name_ger varchar(100),
     Comment_rus text,
     Comment_eng text,
     Comment_ger text,
     TypeID int
);
     ">
 </create>
 <insert
    sql="insert into vp_rang_options (Name_rus, Name_eng, Name_ger, Comment_rus, Comment_eng, Comment_ger, TypeID,Number) values(
   @Name_rus;,
   @Name_eng;,
   @Name_ger;,
   @Comment_rus;,
   @Comment_eng;,
   @Comment_ger;,
   @TypeID;,
   @Number;
)"
    success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">

   <fields>
     <field
      name="Name_rus"
      name_rus="Название(рус)"
      name_eng="Name(rus)"
      type="string"
      maxlength="100"
      needed="1">
    </field> 
      <field
      name="Name_eng"
      name_rus="Название(анг)"
      name_eng="Name(eng)"
      type="string"
      maxlength="100">
    </field>
     <field
      name="Name_ger"
      name_rus="Название(нем)"
      name_eng="Name(ger)"
      type="string"
      maxlength="100">
    </field> 
      <field
      name="Comment_rus"
      name_rus="Комментарии(рус)"
      name_eng="Comment(rus)"
      type="text">
    </field>
    <field
      name="Comment_eng"
      name_rus="Комментарии(анг)"
      name_eng="Comment(eng)"
      type="text">
    </field>
    <field
      name="Comment_ger"
      name_rus="Комментарии(нем)"
      name_eng="Comment(ger)"
      type="text">
    </field>
     <field
      name="TypeID"
      name_rus="Ранг"
      name_eng="Rang"
      type="sqlist"
      sql="select * from vp_rang_types order by Level "
      needed="1">
     </field>

    <field
      name="Number"
      name_rus="Порядок"
      name_eng="Order"
      type="numeric">
    </field>

</fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select sql="select p.*,t.Name_$lang; as Rang from vp_rang_options p left outer join vp_rang_types t on t.TypeID=p.TypeID">
  <header>


    <item
      name="Rang"
      name_rus="Ранг"
      name_eng="Rang">
    </item> 


    <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      lang="1">
    </item> 

     <item
      name="Comment"
      name_rus="Комментарии"
      name_eng="Comment"
      lang="1">
    </item>


    <item type="edit"/>
    <item type="delete"/>
   </header>
 </select>

 <update
   sql="update vp_rang_options set 
   Name_rus=@Name_rus;,
   Name_eng=@Name_eng;,
   Name_ger=@Name_ger;, 
   Comment_rus=@Comment_rus;,
   Comment_eng=@Comment_eng;,
   Comment_ger=@Comment_ger;,
   TypeID=@TypeID;,
   Number=@Number;
where OptionID=@id;"
   select="select * from vp_rang_options where OptionID=@id;"
     success_rus="Запись изменёна!"
     success_eng="Record changed"
     error_eng="Record not found"
     error_rus="Запись не найдена">
   <fields>
     <field
      name="Name_rus"
      name_rus="Название(рус)"
      name_eng="Name(rus)"
      type="string"
      maxlength="100"
      needed="1">
    </field> 
      <field
      name="Name_eng"
      name_rus="Название(анг)"
      name_eng="Name(eng)"
      type="string"
      maxlength="100">
    </field>
     <field
      name="Name_ger"
      name_rus="Название(нем)"
      name_eng="Name(ger)"
      type="string"
      maxlength="100">
    </field> 
      <field
      name="Comment_rus"
      name_rus="Комментарии(рус)"
      name_eng="Comment(rus)"
      type="text">
    </field>
    <field
      name="Comment_eng"
      name_rus="Комментарии(анг)"
      name_eng="Comment(eng)"
      type="text">
    </field>
    <field
      name="Comment_ger"
      name_rus="Комментарии(нем)"
      name_eng="Comment(ger)"
      type="text">
    </field>
     <field
      name="TypeID"
      name_rus="Ранг"
      name_eng="Rang"
      type="sqlist"
      sql="select * from vp_rang_types order by Level "
      needed="1">
     </field>

    <field
      name="Number"
      name_rus="Порядок"
      name_eng="Order"
      type="numeric">
    </field>
</fields>
   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 
 </update>

 <delete
    sql="delete from vp_rang_options where OptionID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>