<?xml version="1.0" encoding="Windows-1251"?>
<form table="en_templates" title_rus="Шаблоны сообщений" title_eng="Mail templates">

 <create
    sql="create table en_templates(
TemplateID int auto_increment primary key, 
Name_rus varchar(255),
Name_eng varchar(255),
Name_ger varchar(255),
Header text,
Footer text
)">
 </create>
 <insert
    sql="insert into en_templates (Name_rus, Name_eng, Name_ger,Header,Footer) values(
   @Name_rus;,
   @Name_eng;,
   @Name_ger;,
   @Header;,
   @Footer;
)"
 success_rus="Запись добавлена!"
    success_eng="Record added">

  <fields>


<field name="Name_rus" type="template"/>

<field name="Name_eng" type="template"/>


<field name="Name_ger" type="template"/>

    <field
      name="Header"
      name_rus="Верх"
      name_eng="Header"
      type="text">
    </field> 

    <field
      name="Footer"
      name_rus="Низ"
      name_eng="Footer"
      type="text">
    </field> 

   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

<select sql="select * from en_templates order by Name_$lang;">
<header>
    <item
      name="TemplateID"
      name_rus="N"
      name_eng="N">
    </item> 

    <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      lang="1">
    </item> 


    <item type="edit"/>

    <item type="delete"/>

   </header>


 </select>

<update
    sql="update en_templates set 
Name_rus=@Name_rus;,
Name_eng=@Name_eng;,
Name_ger=@Name_ger;,
Header=@Header;,
Footer=@Footer;
 where TemplateID=@id;"

