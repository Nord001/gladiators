<?xml version="1.0" encoding="Windows-1251"?>
<form table="ut_post_classes"  title_rus="Структуры" title_eng="Structures" privacy="2">




 <insert
    sql="insert into ut_post_classes (Name_rus,Name_eng,Name_ger,Rang) values(
   @Name_rus;,
   @Name_eng;,
   @Name_ger;,
   @Rang;)"
 success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">

   <fields>

    <field
      name="Name_rus"
      name_rus="Название(рус)"
      type="string"
      maxlength="255"
      needed="1">
    </field>

    <field
      name="Name_eng"
      name_rus="Название(анг)"
      type="string"
      maxlength="255">
    </field>

    <field
      name="Name_ger"
      name_rus="Название(нем)"
      type="string"
      maxlength="255">
    </field>


    <field
      name="Rang"
      name_rus="Ранг"
      name_eng="Rang"
      type="numeric">
    </field>

   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select width="100%" sql="select * from ut_post_classes order by Rang,Name_$lang;">
  <header>

    <item
      name="ClassID"
      name_rus="ИД"
      name_eng="ID"
      name_ger="">
    </item>

    <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      name_ger=""
      lang="1">
    </item>


   <item type="edit"/>
   <item type="delete"/>
  </header>
</select>

<update
    sql="update ut_post_classes set 
Name_rus=@Name_rus;,
Name_ger=@Name_ger;,
Name_eng=@Name_eng;,
Rang=@Rang;
 where ClassID=@id;"

 select="select * from ut_post_classes where ClassID=@id;"
    success_rus="Запись изменена!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена">
   <fields>

    <field
      name="Name_rus"
      name_rus="Название(рус)"
      type="string"
      maxlength="255"
      needed="1">
    </field>

    <field
      name="Name_eng"
      name_rus="Название(анг)"
      type="string"
      maxlength="255">
    </field>

    <field
      name="Name_ger"
      name_rus="Название(нем)"
      type="string"
      maxlength="255">
    </field>

    <field
      name="Rang"
      name_rus="Ранг"
      name_eng="Rang"
      type="numeric">
    </field>

   </fields>
    
   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from ut_post_classes where ClassID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>