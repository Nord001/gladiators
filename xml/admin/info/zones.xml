<?xml version="1.0" encoding="Windows-1251"?>
<form
    table="ut_zones">

 <create
    sql="CREATE TABLE  `ut_zones` (
  `ZoneID` int(10) unsigned NOT NULL auto_increment,
  `Name_rus` varchar(45) default NULL,
  `Name_eng` varchar(45) default NULL,
  `Name_ger` varchar(45) default NULL,
  PRIMARY KEY  (`ZoneID`)
)"
    success_rus="Запись создана"
    success_eng="Record created">
 </create>

 <insert
    sql="insert into ut_zones(Name_rus,Name_eng,Name_ger) values(@Name_rus;,@Name_eng;,@Name_ger;)"
    success_rus="Запись добавлена!"
    success_eng="Record added">

   <fields>

   


    <field
      name="Name_rus"
      name_rus="Название(рус)"
      name_eng="Name(rus)"
      type="string"
      maxlength="255"
      needed="1">
    </field> 




    <field
      name="Name_eng"
      name_rus="Название(анг)"
      name_eng="Name(eng)"
      type="string"
      maxlength="255">
    </field> 



    <field
      name="Name_ger"
      name_rus="Название(нем)"
      name_eng="Name(ger)"
      type="string"
      maxlength="255">
    </field> 




   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select sql="select * from ut_zones order by ZoneID">

   <header>


    <item
      name="ZoneID"
      name_rus="ИД"
      name_eng="ID">
    </item> 




    <item
      name="Name"
      lang="1"
      name_rus="Зона"
      name_eng="Zone">
    </item> 

    <item type="edit"/>

    <item type="delete"/>


   </header>

 </select>

 <update
    sql="update ut_zones set  Name_rus=@Name_rus;,Name_eng=@Name_eng;,Name_ger=@Name_ger;
 where ZoneID=@id;"
    select="select * from ut_zones where ZoneID=@id;"
    success_rus="Запись изменёна!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена"
    button="Submit">
<fields>

   


    <field
      name="Name_rus"
      name_rus="Название(рус)"
      name_eng="Name(rus)"
      type="string"
      maxlength="255"
      needed="1">
    </field> 




    <field
      name="Name_eng"
      name_rus="Название(анг)"
      name_eng="Name(eng)"
      type="string"
      maxlength="255">
    </field> 



    <field
      name="Name_ger"
      name_rus="Название(нем)"
      name_eng="Name(ger)"
      type="string"
      maxlength="255">
    </field> 




   </fields>

   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from ut_zones where ZoneID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted">
 </delete>

</form>