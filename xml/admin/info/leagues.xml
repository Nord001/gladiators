<?xml version="1.0" encoding="Windows-1251"?>
<form
 table="ut_leagues">


 <create
    sql="create table ut_leagues (LeagueID int primary key,Name_rus varchar(30),Name_eng varchar(30),Name_ger varchar(30))"
    success_rus="Запись создана"
    success_eng="Record created">
 </create>

 <insert
    sql="insert into fn_accounts values('',@Money;,0,0)
    #update fn_accounts set LeagueID=LAST_INSERT_ID() where AccountID=LAST_INSERT_ID()
    #insert into ut_leagues values(LAST_INSERT_ID(),@Name_rus;,@Name_eng;,@Name_ger;)"
    success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">

   <fields>

    <field
      name="Money"
      name_rus="Деньги лиги "
      name_eng="Money Liga"
      type="numeric"
      maxlength="30"
      needed="1">
    </field> 

    <field
      name="Name_rus"
      name_rus="Название(рус)"
      name_eng="Name(rus)"
      type="string"
      maxlength="30"
      needed="1">
    </field> 

    <field
      name="Name_eng"
      name_rus="Название(анг)"
      name_eng="Name(eng)"
      type="string"
      maxlength="30">
    </field> 

    <field
      name="Name_ger"
      name_rus="Название(нем)"
      name_eng="Name(ger)"
      type="string"
      maxlength="30">
    </field> 



   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select 
    sql="select  a.AccountID, a.Money, Name_$lang; from ut_leagues l left outer join fn_accounts a on a.AccountID=l.LeagueID order by a.LeagueID">

   <header>

    <item
      name="AccountID"
      name_rus="ИД"
      name_eng="ID">
    </item> 

    <item
      name="Money"
      name_rus="Деньги лиги "
      name_eng="Money Liga">
    </item> 

    <item
      name="Name"
      name_rus="Название"
      name_eng="Name"
      lang="1">
    </item> 

    <item type="edit"/>

    <item type="delete"/>

   </header>

 </select>

 <update
    sql="update fn_accounts set Money=@Money; where AccountID=@id;
    #update ut_leagues set  Name_rus=@Name_rus;,Name_eng=@Name_eng;,Name_ger=@Name_ger; where LeagueID=@id;"

    select="select a.AccountID,a.Money, l.* from fn_accounts a left outer join ut_leagues l on a.AccountID=l.LeagueID where a.AccountID=@id;"
    success_rus="Запись изменёна!"
    success_eng="Record changed"
    error_eng="Record not found"
    error_rus="Запись не найдена"
    button="Submit">

   <header>

     <item
      name_rus="поле"
      name_eng="field">
     </item>

     <item
      name_rus="значение"
      name_eng="value">
     </item>

   </header>

   <fields>


    <field
      name="AccountID"
      name_rus="ИД Лиги"
      name_eng="AccountID"
      type="clear"
      needed="1">
    </field> 

    <field
      name="Money"
      name_rus="Деньги лиги "
      name_eng="Money Liga"
      type="numeric"
      maxlength="30"
      needed="1">
    </field> 

   
    <field
      name="Name_rus"
      name_rus="Название(рус)"
      name_eng="Name(rus)"
      type="string"
      maxlength="30"
      needed="1">
    </field> 

    <field
      name="Name_eng"
      name_rus="Название(анг)"
      name_eng="Name(eng)"
      type="string"
      maxlength="30">
    </field> 

    <field
      name="Name_ger"
      name_rus="Название(нем)"
      name_eng="Name(ger)"
      type="string"
      maxlength="30">
    </field> 



   </fields>

   <button
       name_rus="Изменить запись"
       name_eng="Change record">
   </button> 


 </update>

 <delete
    sql="delete from ut_leagues where LeagueID=@id;
    #delete from fn_accounts where AccountID=@id;"
    success_rus="Запись удалена"
    success_eng="Record deleted"
    error_eng="Record not found"
    error_rus="Запись не найдена">
 </delete>

</form>