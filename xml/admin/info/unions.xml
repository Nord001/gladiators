<?xml version="1.0" encoding="Windows-1251"?>
<form table="ut_unions">

 <create
    sql="CREATE TABLE ut_unions(
	UnionID int auto_increment PRIMARY KEY,
	CountryID int,
	Name_rus varchar(50),
	Name_eng varchar(50),
	Name_ger varchar(50),
	ICQ1 varchar(20),
	ICQ2 varchar(20),
	Email1 varchar(50),
	Email2 varchar(50),
	SiteUrl varchar(50),
	ForumUrl varchar(50),
	Logo blob,
	LeagueID int);"

    success_rus="Запись создана"
    success_eng="Record created">
 </create>

 <insert
    sql="insert into ut_unions(	
	UnionID,
	CountryID,
	Name_rus,
	Name_eng,
	Name_ger,
	ICQ1,
	ICQ2,
	Email1,
	Email2,
	SiteUrl,
	ForumUrl,
	Logo,
	LeagueID) values(
	'',
	@CountryID;,
	@Name_rus;,
	@Name_eng;,
	@Name_ger;,
	@ICQ1;,
	@ICQ2;,
	@Email1;,
	@Email2;,
	@SiteUrl;,
	@ForumUrl;,
	@Logo;,
	@LeagueID;)"
    success_rus="Запись добавлена!"
    success_eng="Record added"
    button="Submit">

   <fields>

   
    <field
      name="CountryID"
      name_rus="Страна"
      name_eng="Country"
      type="sqlist"
      needed="1"
      unique="1"
      sql="select CountryID,Name_$lang; from ut_countries order by @Name_lang;">
    </field> 


    <field
      name="Name_rus"
      name_rus="Название(рус)"
      name_eng="Name(rus)"
      type="string"
      maxlength="50"
      unique="1"
      needed="1">
    </field> 

    <field
      name="Name_eng"
      name_rus="Название(анг)"
      name_eng="Name(eng)"
      type="string"
      maxlength="50">
    </field> 

    <field
      name="Name_ger"
      name_rus="Название(нем)"
      name_eng="Name(ger)"
      type="string"
      maxlength="50">
    </field> 

    <field
      name="ICQ1"
      name_rus="ICQ1"
      name_eng="ICQ1"
      type="string"
      maxlength="20">
    </field> 

    <field
      name="ICQ2"
      name_rus="ICQ2"
      name_eng="ICQ2"
      type="string"
      maxlength="20">
    </field> 

    <field
      name="Email1"
      name_rus="Email1"
      name_eng="Email1"
      type="string"
      maxlength="50">
    </field> 

    <field
      name="Email1"
      name_rus="Email1"
      name_eng="Email1"
      type="string"
      maxlength="50">
    </field> 

    <field
      name="SiteUrl"
      name_rus="Адрес сайта"
      name_eng="Site Url"
      type="string"
      maxlength="50">
    </field>http://

    <field
      name="ForumUrl"
      name_rus="Адрес форума"
      name_eng="Forum Url"
      type="string"
      maxlength="50">
    </field>http://

    <field
      name="Logo"
      name_rus="Логотип"
      name_eng="Logo"
      type="image">
    </field>

    <field
      name="LeagueID"
      name_rus="Лига"
      name_eng="League"
      type="sqlist"
      sql="select LeagueID,Name_$lang; from ut_leagues order by LeagueID desc">
    </field> 

   </fields>

   <button
       name_rus="Добавить запись"
       name_eng="Add record">
   </button> 

 </insert>

 <select
   sql="select c.*,k.Name_$lang; as Country from ut_unions c left outer join ut_countries k on c.CountryID=k.CountryID order by c.Name_$lang; asc"
